---
import LinkButton from './LinkButton.astro';

interface Props {
	title: string;
	body: string;
	href: string;
}

const { title, body, href } = Astro.props;
---

<section class="cta">
	<div class="wrapper">
		<h2 class="heading">{title}</h2>
		<p class="summary">{body}</p>
		<div class="action">
			<LinkButton label="Contact Us" href={href}/>
		</div>
	</div>
</section>

<style lang="scss">
.cta {
	background-color: var(--color-surface-variant);
	color: var(--color-on-surface-variant);
	padding-top: 1rem;
	padding-bottom: 3rem;

	display: flex;
	flex-direction: column;
	justify-content: center;

	transition: all 0.5s;
}

.heading {
	font-size: 2.36rem;
	line-height: 1.3;
	font-weight: 900;
	text-align: center;

	@media (min-width: 37em) {
		font-size: 3.15rem;
	}

	@media (min-width: 56em) {
		font-size: 4.2rem;
	}
}

.summary {
	margin-top: 1.77rem;
	margin-bottom: 2rem;
	margin-left: 4rem;
	margin-right: 4rem;

	font-size: 1.33rem;
	text-align: center;

	@media (min-width: 37em) {
		text-align: justify;
	}
}

.action {
	display: flex;
	justify-content: center;
}
</style>
