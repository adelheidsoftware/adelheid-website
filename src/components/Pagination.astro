---
interface Props {
	pageCount: number,
	currentUrl: string,
	currentPageNumber: number,
	firstUrl: string,
	prevUrl?: string,
	nextUrl?: string,
	lastUrl: string
}

const { pageCount, currentUrl, currentPageNumber, firstUrl, prevUrl, nextUrl, lastUrl } = Astro.props;
---
{
	pageCount > 1 &&
	<nav aria-label="Blog page navigation" class="pagination">
	<ul class="pagination-list">
		{
			currentUrl != firstUrl && prevUrl != firstUrl ? (
			<li class="pagination-list-item">
			<a href={firstUrl}>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="m313-480 155 156q11 11 11.5 27.5T468-268q-11 11-28 11t-28-11L228-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 27.5-11.5T468-692q11 11 11 28t-11 28L313-480Zm264 0 155 156q11 11 11.5 27.5T732-268q-11 11-28 11t-28-11L492-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 27.5-11.5T732-692q11 11 11 28t-11 28L577-480Z" fill="currentColor"/>
				</svg>
			</a>
			</li>
			) : (
			<li class="pagination-list-item">
			<span>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="m313-480 155 156q11 11 11.5 27.5T468-268q-11 11-28 11t-28-11L228-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 27.5-11.5T468-692q11 11 11 28t-11 28L313-480Zm264 0 155 156q11 11 11.5 27.5T732-268q-11 11-28 11t-28-11L492-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 27.5-11.5T732-692q11 11 11 28t-11 28L577-480Z" fill="currentColor"/>
				</svg>
			</span>
			</li>
			)
		}
		{
			prevUrl != undefined ? (
			<li class="pagination-list-item">
			<a href={prevUrl}>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="m432-480 156 156q11 11 11 28t-11 28q-11 11-28 11t-28-11L348-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 28-11t28 11q11 11 11 28t-11 28L432-480Z" fill="currentColor"/>
				</svg>
			</a>
			</li>
			) : (
			<li class="pagination-list-item">
			<span>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="m432-480 156 156q11 11 11 28t-11 28q-11 11-28 11t-28-11L348-452q-6-6-8.5-13t-2.5-15q0-8 2.5-15t8.5-13l184-184q11-11 28-11t28 11q11 11 11 28t-11 28L432-480Z" fill="currentColor"/>
				</svg>
			</span>
			</li>
			)
		}
		{
			nextUrl != undefined ? (
			<li class="pagination-list-item">
			<a href={nextUrl}>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="M504-480 348-636q-11-11-11-28t11-28q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L404-268q-11 11-28 11t-28-11q-11-11-11-28t11-28l156-156Z" fill="currentColor"/>
				</svg>
			</a>
			</li>
			) : (
			<li class="pagination-list-item">
			<span>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="M504-480 348-636q-11-11-11-28t11-28q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L404-268q-11 11-28 11t-28-11q-11-11-11-28t11-28l156-156Z" fill="currentColor"/>
				</svg>
			</span>
			</li>
			)
		}
		{
			currentUrl != lastUrl && nextUrl != lastUrl ? (
			<li class="pagination-list-item">
			<a href={lastUrl}>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="M383-480 228-636q-11-11-11.5-27.5T228-692q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L284-268q-11 11-27.5 11.5T228-268q-11-11-11-28t11-28l155-156Zm264 0L492-636q-11-11-11.5-27.5T492-692q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L548-268q-11 11-27.5 11.5T492-268q-11-11-11-28t11-28l155-156Z" fill="currentColor"/>
				</svg>
			</a>
			</li>
			) : (
			<li class="pagination-list-item">
			<span>
				<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="24" viewBox="0 -960 960 960" width="24">
					<path d="M383-480 228-636q-11-11-11.5-27.5T228-692q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L284-268q-11 11-27.5 11.5T228-268q-11-11-11-28t11-28l155-156Zm264 0L492-636q-11-11-11.5-27.5T492-692q11-11 28-11t28 11l184 184q6 6 8.5 13t2.5 15q0 8-2.5 15t-8.5 13L548-268q-11 11-27.5 11.5T492-268q-11-11-11-28t11-28l155-156Z" fill="currentColor"/>
				</svg>
			</span>
			</li>
			)
		}
	</ul>
	</nav>
}

