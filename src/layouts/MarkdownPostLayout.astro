---
import BaseLayout from './BaseLayout.astro';

import LinkChip from '../components/LinkChip.astro';
import BlogBackButton from '../components/BlogBackButton.astro';

const { frontmatter } = Astro.props;

import company from '../data/company.json';
---
<BaseLayout title=`${frontmatter.title} | ${company.name} Blog` description={frontmatter.summary}>
	<div class="wrapper">
		<BlogBackButton href="/blog" label="Back to articles", svgString=`<svg xmlns="http://www.w3.org/2000/svg" height="16" viewBox="0 -960 960 960" width="16"><path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" fill="currentColor"/></svg>`/>
		<article>
			<h1>{frontmatter.title}</h1>
			<p>{frontmatter.pubDate.toString().slice(0,10)}</p>
			<p><em>{frontmatter.summary}</em></p>
			<p>Written by {frontmatter.author}</p>
			{!frontmatter.authorTitle ? '' : <b>{frontmatter.authorTitle}</b>}

			<div class="tags">
				{frontmatter.tags.map((tag: string) => (
					<LinkChip href={`/tags/${tag}`} label={`#${tag}`}/>
				))}
			</div>

			<slot />
		</article>
	</div>
</BaseLayout>